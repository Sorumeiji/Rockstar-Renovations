---
import Navbar from '../components/Navbar.astro';
import Layout from '../layouts/Layout.astro';
---

<Layout title='Welcome to Rockstar Renovations.'>
	<main class='gallery'>
		<header>
			<Navbar />
			<div class='u-container'>
				<div class='title'>
					<h1>Album of renovations.</h1>
					<p>
						A feast for the eyes, showcasing some of the most breathtaking home renovation projects
						you'll ever see.
					</p>
				</div>
			</div>
		</header>

		<section class='gallery-images'>
			<div class='u-container flow'>
				<article>
					<div class='demo-galery smol-flexbox-grid'>
						<img alt='picture of kitchen renovation' src='/images/1.jpg' />
						<img alt='picture of bathroom renovation' src='/images/2.jpg' />
						<img alt='picture of bathroom renovation' src='/images/3.jpg' />
						<img alt='picture of bathroom renovation' src='/images/4.jpg' />
						<img alt='picture of bathroom renovation' src='/images/5.jpg' />
						<img alt='picture of entrance renovation' src='/images/6.jpg' />
						<img alt='picture of bathroom renovation' src='/images/7.jpg' />
						<img alt='picture of bathroom renovation' src='/images/8.jpg' />
						<img alt='picture of entrance renovation' src='/images/9.jpg' />
						<img alt='picture of entrance renovation' src='/images/10.jpg' />
					</div>
				</article>
			</div>
		</section>

		<section class='gallery-story'>
			<div style='border-left: 1px solid hsl(220, 4%, 17%);' class='u-container flow'>
				<p>
					Our renovations are done right and done with heart. We aim to be great and to excel at
					every aspect in our process. That is the rockstar way.
				</p>
				<!-- <a class='button-disabled' role='button'>
					<i class='fa-solid fa-guitar-electric'></i> View Case Studies
				</a> -->
			</div>
		</section>
	</main>
</Layout>
